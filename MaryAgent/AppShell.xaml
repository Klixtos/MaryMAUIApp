<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MaryAgent.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MaryAgent"
    xmlns:views ="clr-namespace:MaryAgent.views"
    Title="Mary Agent"
    Shell.FlyoutBehavior="Flyout">



    <FlyoutItem Title="Assesments">
        <ShellContent  ContentTemplate="{DataTemplate views:AssesmentsPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Account">
        <ShellContent ContentTemplate="{DataTemplate views:Account}" />
    </FlyoutItem>
    <MenuItem Text="Logout" Clicked="LogoutMenuItem_Clicked" />

</Shell>
